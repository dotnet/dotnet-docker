{{if isDistrolessMariner:
RUN tdnf install -y ca-certificates-microsoft \
    && tdnf clean all
}}
# Retrieve ASP.NET Core
{{InsertTemplate("Dockerfile.linux.install-aspnet", ["use-local-version-var": "true"])}}


# ASP.NET Core image
