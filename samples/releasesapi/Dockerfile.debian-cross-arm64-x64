# syntax=docker/dockerfile:1
# Learn about building .NET container images:
# https://github.com/dotnet/dotnet-docker/blob/main/samples/README.md
FROM mcr.microsoft.com/dotnet/sdk:8.0-bookworm-slim-arm64v8 AS build
ARG TARGETARCH
RUN <<EOF
dpkg --add-architecture amd64
apt-get update
apt-get install -y clang zlib1g-dev zlib1g-dev:amd64 gcc-x86-64-linux-gnu llvm
EOF
WORKDIR /source

# Copy all source assets
COPY . .
# Cache mounts caches runtime packs and NuGet packages across builds
RUN --mount=type=cache,target=/root/.nuget \
    --mount=type=cache,target=/source/bin \
    --mount=type=cache,target=/source/obj \
    dotnet publish -a $TARGETARCH -o /app releasesapi.csproj


# final stage/image
FROM mcr.microsoft.com/dotnet/runtime-deps:8.0
WORKDIR /app
COPY --from=build /app .
USER $APP_UID
ENTRYPOINT ["./releasesapi"]
